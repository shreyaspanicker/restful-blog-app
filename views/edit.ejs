<% include partials/header %>

<div class="main ui text container segment">
    <div class="ui huge header">
        Edit Blog
    </div>
    <form class="ui form"action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="">Title</label>
            <input type="text" value="<%= blog.title %>" name="blog[title]">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" value="<%= blog.image %>" name="blog[image]">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10">
                <%= blog.body %>
            </textarea>
        </div>
        <input type="submit" class="ui violet basic button">
    </form>
</div>

<% include partials/footer %>